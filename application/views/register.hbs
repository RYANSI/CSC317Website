<div class="header">
    <h1>Create An Account</h1>
</div>
<br>

<!-- Registration form -->
<div>
    <form action="#" method="POST">
        <div class="form-group">
            <input type="email" id="email" name="username" class="form-control" placeholder="Enter your email"
                maxlength="40" required />
        </div>
        <br>
        <div class="form-group">
            <input type="text" id="username" placeholder="Enter an username" maxlength="40" required />
        </div>
        <br>
        <div class="form-group">
            <input type="password" id="password" name="password" class="form-control"
                placeholder="Create password (8-20 characters)" minlength="8" maxlength="20" required />
        </div>
        <div class="mb-3" id="passwordMsg"></div>
        <div class="form-group">
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                placeholder="Confirm password" minlength="8" maxlength="20" required />
        </div>
        <br>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" name="terms" required>
            <label class="form-check-label" for="terms">I agree to the <a href="#">Terms</a> and
                that I have read the <a href="#">Data Use Policy</a>,
                including <a href="#">Cookie Use</a>.</label>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" name="captcha" required>
            <label class="form-check-label" for="captcha">I confirm that I am over 13 years of age.</label>
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="submit" id="register">
                Register
            </button>
        </div>
    </form>
</div>